<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_soup_detail_full_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/soup_full_imageView"
        android:transitionName="soupImage"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/soup_full_tvcontainer">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.0sp"
            android:gravity="left"
            android:textColor="@color/bg_color"
            android:text="万物理论 饭太稀 作品"
            android:id="@+id/soup_full_author"
            android:background="@drawable/circle_rectangle" />
    </LinearLayout>


</RelativeLayout>
